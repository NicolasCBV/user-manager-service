{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,

    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,

    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,

    "paths": {
      "@src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@intra/*": ["src/intra/*"],
      "@helpers/*": ["src/helpers/*"],
      "@test/*": ["test/*"],
      "@templates/*": ["templates/*"]
    }
  }
}
